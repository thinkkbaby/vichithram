{
  "name": "vichithram",
  "version": "0.1.0",
  "description": "Thulite Doks site",
  "author": "Your Name",
  "license": "MIT",
  "homepage": "https://thinkkbaby.github.io/vichithram/",
  "repository": {
    "type": "git",
    "url": "https://github.com/thinkkbaby/vichithram.git"
  },
  "scripts": {
    "dev": "hugo server --disableFastRender --navigateToChanged",
    "dev:drafts": "hugo server --disableFastRender --navigateToChanged --buildDrafts",
    "build": "hugo --minify --gc",
    "build:preview": "hugo --minify --gc --buildFuture --buildDrafts",
    "lint": "npm run lint:markdown && npm run lint:styles",
    "lint:markdown": "markdownlint-cli2 \"content/**/*.md\" \"*.md\"",
    "lint:styles": "stylelint \"assets/scss/**/*.scss\" --cache",
    "test": "hugo server --disableFastRender --navigateToChanged --environment=test",
    "clean": "hugo mod clean && npm run clean:node",
    "clean:node": "rm -rf node_modules package-lock.json",
    "update": "hugo mod get -u && npm update"
  },
  "devDependencies": {
    "@thulite/doks-core": "^1.6.0",
    "markdownlint-cli2": "^0.13.0",
    "stylelint": "^16.6.1"
  },
  "dependencies": {
    "hugo-bin": "^0.122.0"
  }
}